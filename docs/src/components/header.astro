---
const name = 'Liquid Auth';
const logo = '../../public/logo.svg';

const links = [
  {
    title: 'About',
    href: '/about'
  },
  {
    title: 'Features',
    href: '/features'
  },
  {
    title: 'Ecosystem',
    href: '/ecosystem'
  },
  {
    title: 'News',
    href: '/news'
  },
  {
    title: 'Partners',
    href: '/partners'
  }
];

---
<header class="absolute inset-x-0 top-0 z-50">
  <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
    <div class="h-16 flex lg:flex-1 items-center gap-2">
      <img class="h-12 w-auto" src={logo} alt="">
      <div class="h-16 flex flex-col items-stretch justify-between">
        <h1 class="text-2xl text-white font-extrabold uppercase">Liquid</h1>
        <h1 style="font-stretch: expanded;" class="text-2xl text-white stretch font-extrabold uppercase">Auth</h1>
      </div>
    </div>
    <div class="hidden lg:flex lg:gap-x-12 lg:justify-end">
    </div>
    <div class="hidden lg:flex lg:flex-1 lg:gap-x-12 items-center lg:justify-end">
      {links.map(({ title, href }) =>
        <a href={href} class="text-md leading-6 text-white">{title}</a>
      )}
      <a href="/docs" class="px-6 py-2 uppercase rounded-full leading-6 bg-liquid-purple text-white">Documentation</a>
    </div>
  </nav>
</header>
